{
  "expo": {
    "name": "스터디 완주",
    "slug": "study-eungwon-dan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "primaryColor": "#667eea",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.studyeungwondan.app",
      "infoPlist": {
        "UIBackgroundModes": ["background-processing"],
        "NSUserNotificationsUsageDescription": "스터디 시간 알림을 위해 알림 권한이 필요합니다."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.studyeungwondan.app",
      "usesCleartextTraffic": true,
      "permissions": [
        "NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "VIBRATE",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff",
          "defaultChannel": "스터디 알림"
        }
      ]
    ]
  }
}
